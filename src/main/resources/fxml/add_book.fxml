<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
    spacing="10" alignment="TOP_CENTER" fx:controller="com.bibliotheque.controller.BookController" stylesheets="@../styles/cheerful.css">
    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <Label text="Add Book" fx:id="titleLabel" style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="ISBN:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="isbnField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Author:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="authorField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Copies:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="copiesField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" text="" />
        <Button text="Add Book" onAction="#onAddBook" />
    </HBox>

</VBox>
