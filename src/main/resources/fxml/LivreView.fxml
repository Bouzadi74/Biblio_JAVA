<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.bibliotheque.controller.LivreController"
      style="-fx-padding: 15; -fx-spacing: 10; -fx-background-color: #f5f5f5;"
