            <TextField fx:id="txtTitre" promptText="Titre du livre" style="-fx-padding: 5; -fx-font-size: 11;"/>
        </VBox>

        <VBox spacing="5" style="-fx-padding: 5;">
            <Label text="Auteur:" style="-fx-font-weight: bold; -fx-font-size: 11;"/>
            <TextField fx:id="txtAuteur" promptText="Auteur" style="-fx-padding: 5; -fx-font-size: 11;"/>
